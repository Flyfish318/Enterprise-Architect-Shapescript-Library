		bezierto(65,50,45,-55,90,25);
		lineto(90,80);
		lineto(0,80);
		endpath();
		fillandstrokepath();

		//Red section
		setpencolor(228,104,86);
		setfillcolor(245,140,126);
		startpath();
		moveto(0,40);
		lineto(15,20);
		lineto(30,35);
		bezierto(70,50,45,-20,90,35);
		lineto(90,60);
		lineto(20,60);
		lineto(15,35);
		lineto(5,60);
		lineto(0,60);
		endpath();
		fillandstrokepath();

		//Blue section
		setpencolor(88,125,214);
		setpenwidth(1);
		setfillcolor(137,181,216);
		startpath();
		moveto(0,60);
		lineto(5,60);
		lineto(15,35);
		lineto(20,60);
		lineto(90,60);
		lineto(90,85);
